name:                wp-test
version:             0.1.0.0
synopsis:            Hedgehog state machine tests for WordPress
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Andrew McCluskey
maintainer:          contact@qfpl.io
-- copyright:           
category:            Testing
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     Data.GADT.Aeson
                     , Web.WordPress.API
                     , Web.WordPress.Types.Post
                     , Web.WordPress.YoloContent
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.10 && <4.11
                     , aeson >=1.1.2.0 && <1.3
                     , bimap >=0.2 && <0.3
                     , containers >=0.4.0 && <0.6
                     , dependent-map >=0.2 && <0.3
                     , dependent-sum >=0.4 && <0.5
                     , dependent-sum-template >=0 && <0.1
                     , ghc-prim >=0.5 && <0.6
                     , http-media >=0.6 && <0.8
                     , servant >=0.11 && <0.14
                     , servant-client >=0.11 && <0.14
                     , text >=1.2.2.2 && <1.3
                     , time >=1.5 && <1.10
                     , unordered-containers >=0.2.4 && <0.3
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite state-tests
  other-modules:       Types
                       WordPressTests
  build-depends:       base >=4.10 && <4.11
                     , bytestring >=0.9.1 && <0.11
                     , containers >=0.4.0 && <0.6
                     , dependent-map >=0.2 && <0.3
                     , dependent-sum >=0.4 && <0.5
                     , hedgehog >=0.5 && <0.6
                     , http-types >=0.8.6 && <0.11
                     , http-client >=0.5 && <0.6
                     , lens >=4.0.5 && <5
                     , mysql >=0.1 && <0.2
                     --, servant >=0.11 && <0.14
                     , servant-client >=0.11 && <0.14
                     , tasty >=0.11 && <1.1
                     , tasty-hedgehog >=0.1 && <0.3
                     , text >=1.2.2.2 && <1.3
                     , wp-test
  hs-source-dirs:      test
  default-language:    Haskell2010
  main-is:             Test.hs
  type:                exitcode-stdio-1.0
